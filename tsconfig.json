{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"], // 新增這行
    "types": ["node", "express", "cors"] // 新增這行
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
